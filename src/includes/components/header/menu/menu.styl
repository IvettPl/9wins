.header-nav
    max-width 375px
    padding 56px 16px 152px
    width 100%
    height 100%
    position fixed
    top 0
    left 0
    z-index 4
    background-color $black
    box-sizing border-box
    transform translateX(-100%)
    transition transform 250ms

    &.show
        transform translateX(0)

    .login__box-default
        .btn
            width 126px
            height 48px
    //     @media(min-width 1025px)
    //         display none

    &__close
        width 24px
        height 24px
        position absolute
        top 9px
        right 16px
        border 0
        background url(../img/svg/btn-close.svg) no-repeat center
        background-size cover
        cursor pointer
        transition opacity 250ms

        &:hover
            opacity .5

    &__tabs
        width 100%
        height 100%
        overflow-x hidden
        overflow-y auto

        &-content
            width 100%
            display flex
            transform translate(0)
            transition transform 250ms ease

            &.shift
                transform translate(-100%)

        &-head
            width calc(100% - 32px)
            height 44px
            display flex
            position absolute
            left 16px
            bottom 22px
            opacity 0
            visibility hidden
            background-color $dark
            border-radius 22px

            @media(min-height 720px)
                bottom 30px

            &:before
                content ''
                width 50%
                height 100%
                position absolute
                top 0
                left 0
                border-radius 22px
                background-color $gray
                transform translate(0)
                transition transform 250ms ease

            &.shift
                &:before
                    transform translate(100%)


            &-item
                width 50%
                display block
                line-height 44px
                font-size 13px
                color $gray-superlight
                text-align center
                letter-spacing -.08px
                position relative

    .list
        margin-top 0
        width 100%
        flex-shrink 0

        &:last-child
            display none

        &[data-tab-content="1"]
            .list__item
                &:hover
                    circle
                    path
                    g
                        fill $white
                        opacity 1
                        transition fill 250ms, opacity 250ms

                    .slot
                        path
                            &:last-child
                                fill none
                                stroke $white
                                transition stroke 250ms, opacity 250ms

        &[data-tab-content="2"]
            .list__item
                &:hover
                    circle
                    path
                        fill $white
                        opacity 1
                        transition fill 250ms, opacity 250ms

                    .games
                        path
                            &:first-child
                                fill none
                                stroke $white
                                transition stroke 250ms, opacity 250ms

                    .tennis-big
                    .basketball
                    .tennis-small
                    .volleyball
                    .hockey
                    .ufc
                    .boxing
                        path
                            fill none
                            stroke $white
                            transition stroke 250ms, opacity 250ms

        &__item
            margin-bottom 12px

            &:last-child
                margin-bottom 0

    &__footer
        width 100%
        position absolute
        left 0
        bottom 20px

.overlay
    width 100%
    height 100%
    position fixed
    top 0
    left 0
    z-index 3
    opacity 0
    visibility hidden
    background-color rgba($dark, .8)
    transition opacity 250ms, visibility 250ms
    cursor pointer

    &.show
        opacity 1
        visibility visible



.wrapper--reg
    .header-nav
        .list
            &:last-child
                display block

        .header-nav
            &__tabs
                &-head
                    opacity 1
                    visibility visible