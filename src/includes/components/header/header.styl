.header
    padding 10px 0 11px
    width 100%
    position fixed
    top 0
    left 0
    z-index 2
    background-color $black

    .logo
        width 76px
        height 21px
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)

        img
            width 100%
            display block

    &__tools
        display inline-flex
        align-items center

    &__menu-btn
        margin-right 15px
        padding 0
        width 24px
        height 24px
        overflow hidden
        border 0
        background url(../img/svg/menu.svg) no-repeat center
        background-size cover
        cursor pointer
        transition transform 250ms

        &:hover
            transform scale(1.1)