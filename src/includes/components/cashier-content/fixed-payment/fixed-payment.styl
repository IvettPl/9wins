.fixed-payment
    margin 40px 0
    width 100%
    display flex
    justify-content space-between

    &__item
        width 104px
        height 48px
        cursor pointer

        button
            width 100%
            height 100%
            display flex
            justify-content center
            align-items center
            color $gray-light
            letter-spacing -0.41px
            background-color $gray
            border-radius 12px
            box-shadow 0 4px 16px 0 rgba($dark, 0.5)
            cursor pointer

            span
                margin-left 4px
                display block