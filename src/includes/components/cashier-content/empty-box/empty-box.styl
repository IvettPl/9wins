.empty-box
    width 100%
    line-height 20px
    font-size 15px
    letter-spacing -0.24px

    .btn__wrap
        margin-bottom 56px

    &--history
        .btn__wrap
            margin-bottom 0
            margin-top 56px

    &__label
        margin-bottom 8px
        color $blue-superlight

    &__field
        width 100%
        height 95px
        display flex
        color $white
        justify-content center
        align-items center
        border 1px solid $gray
        border-radius 16px
        box-sizing border-box