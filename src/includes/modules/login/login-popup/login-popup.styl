.login-popup
    max-width 760px
    width 100%
    display flex
    position fixed
    left 50%
    top 50%
    z-index 3
    opacity 0
    visibility hidden
    overflow-y auto
    transform translate(-50%, -50%)
    background-color $dark
    border-radius 24px
    transition opacity 250ms,  visibility 250ms

    @media(max-width 768px)
        max-width 418px

    @media(max-height 741px)
        height 100%
        background-color $black

    @media(max-width 418px)
        border-radius 0

    &.show
        opacity 1
        visibility visible

        .header-nav__tabs-head
            opacity 1
            visibility visible

    &__dialog
        padding 18px 40px 0
        width 100%
        box-sizing border-box

        @media(max-width 418px)
            padding 18px 16px 0

        .btn
            margin 0 auto
            width 235px
            height 44px
            display block
            line-height 21px
            font-size 18px

            &__wrap
                margin 10px 0 98px

    &__title
        margin-bottom 34px
        line-height 28px
        font-size 22px
        color $orange-light
        letter-spacing 0.35px

    &__column
        padding 0 4px
        width 44%
        display flex
        align-items center
        background none
        border-radius 0

        @media(max-width 768px)
            display none

        &:last-child
            padding 0
            width 56%
            display block
            background-color $black
            border-radius 24px
            box-sizing border-box

            @media(max-width 768px)
                width 100%
                display block

            @media(max-width 418px)
                border-radius 0

        .header-nav
            &__tabs
                &-head
                    margin-bottom 32px
                    width 100%
                    position relative
                    left auto
                    bottom auto
                    display flex

                    &-item
                        &.active
                            color $green
            &__list
                &:last-child
                    display block

        .charitem
            height 447px

            &__bg
                height 108%

            .nowstiker
                top -4px
                opacity 1

            &__place
                top 130px
                opacity 1

            &__bottom-bg
                &:before
                    opacity 1
                    backdrop-filter filter(12px)

            &__info
                &-text
                    opacity 1
                    transform translateY(0)

            &__bottom-item
                    opacity 1
                    transform translateY(0)

            .btn
                opacity 1
                transform translateY(0)

    &__footer
        padding 15px 0
        line-height 18px
        font-size 15px
        color $white
        text-align center
        background-color $gray
        border-radius 0 0 24px 24px

        @media(max-width 418px)
            border-radius 0

        a
            margin-left 4px
            color $blue
            position relative

            &:before
                content ''
                width 100%
                height 1px
                position absolute
                left 0
                bottom 0
                background-color $blue
                transition width 250ms

            &:hover
                &:before
                    width 0


    .charitem
        &__bg
        &__bottom-bg
        .stiker
            opacity 1