.login__social
    margin-bottom 30px
    width 100%
    text-align center
    border-top 1px solid $gray-lighter

    &-title
        margin-top -12px
        padding 0 13px
        display inline-block
        vertical-align top
        line-height 20px
        font-size 15px
        color $gray-superlight
        white-space nowrap
        background-color $black

    &-icns
        margin-top 16px
        width 100%
        display flex
        justify-content space-evenly
        align-items center

        a
            display block
            transition opacity 250ms

            &:hover
                opacity 0.5