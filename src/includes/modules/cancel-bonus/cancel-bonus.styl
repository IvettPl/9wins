.cancel-bonus
    margin-top -40px
    padding 28px 64px 21px
    width calc(100% - 32px)
    line-height 28px
    font-size 22px
    color $white
    text-align center
    position absolute
    top 50%
    left 16px
    z-index 2
    opacity 0
    visibility hidden
    background-color $gray-lighter
    border-radius 17px
    transform translateY(-50%)
    box-shadow 0 4px 55px 0 rgba($dark, .75)
    box-sizing border-box
    transition opacity 250ms, visibility 250ms

    @media(max-width 767px)
        padding 28px 50px 21px

    &.show
        opacity 1
        visibility visible
