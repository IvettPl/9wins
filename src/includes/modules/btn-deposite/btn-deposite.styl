.btn-deposite
    width 48px
    height 48px
    display block
    flex-shrink 0
    position relative
    background-color $red
    border-radius 50%
    cursor pointer
    transition opacity 250ms

    &:before
    &:after
        content ''
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        background-color $white
        border-radius 2px

    &:before
        width 22px
        height 4px

    &:after
        width 4px
        height 22px