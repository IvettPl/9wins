.popup-bonuses
    width 261px
    box-sizing border-box

    @media(max-width 767px)
        padding 56px 0 46px 16px
        width 100%

    &__title
        line-height 20px
        font-size 15px
        text-align center
        color $gray-lighter
        letter-spacing -0.24px

        @media(max-width 767px)
            display none

    &__list
        padding 0 2px
        width 100%
        box-sizing border-box

        &-item
            margin 14px 0 0
            width 100%
            cursor pointer

            @media(max-width 767px)
                margin 0
                width 257px

            &:first-child
                .popup-bonuses__list-img
                    box-shadow 0 0 0 2px $dark, 0 0 0 4px $green

            p
                line-height 20px
                font-size 15px
                color $yellow
                letter-spacing -0.24px

                @media(max-width 767px)
                    display none

        &-img
            margin 0 2px 12px
            width calc(100% - 4px)
            position relative
            overflow hidden
            border-radius 20px

            @media(max-width 767px)
                margin 4px 2px

        &-title
            line-height 72px
            font-size 72px
            color $red
            font-weight 900
            letter-spacing -3.32px

    &__text
        padding 0 16px
        width 100%
        height 100%
        display flex
        flex-direction column
        justify-content center
        position absolute
        top 0
        left 0
        font-style italic
        text-shadow 1px 2px 0 $black
        box-sizing border-box

    &__desc
        margin-bottom 10px
        line-height 21px
        font-size 24px
        color $white
        font-weight 700
        letter-spacing -0.32px

        span
            display block

    &__yellow
        .popup-bonuses__list-title
            color $yellow

    &__green
        .popup-bonuses__list-title
            color $green
