include var-log-popup



#log.popup.popup-log
    button.popup__close
    .popup__columns
        .popup__column
            +charItem(charItemLoginPopup)
        .popup__column
            .popup__dialog
                .popup__title Log In
                form(id="login-form" action="" method="POST" name="login")
                    +tabs(popupLoginTabs)
                        .popup__form-viewport
                            .popup__form
                                .form-line
                                    label(for="mail") Email
                                    .form-line__icn-wrap
                                        .form-line__icn.form-line__icn--clear
                                            img(src="./img/svg/clear.svg", alt="Clear")
                                        +inputText(fieldMailInput)

                                .form-line
                                    label(for="password") Password
                                    .form-line__icn-wrap
                                        .form-line__icn.form-line__icn--pass
                                            img(src="./img/svg/show-pass.svg", alt="Show password")
                                        +inputText(fieldPassInput)

                                .form-line.form-line--check
                                    +checkbox(fieldLogCheck)
                                    label.label.label__checkbox(for="fogot-pass") Fogot your password?
                                        a(href="##") Get recovery link.

                            .popup__form
                                include ./../../form-fields/phones-fields-group
                                include ./../../form-fields/verify-group
                    .btn__wrap
                        +button(popupLoginBtn)

            .popup__footer
                include ./../social-network/social-network
                .popup__footer-wrap
                    p Donâ€™t have an account?
                        a(href="##") Sign Up