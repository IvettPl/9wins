.bonus-empty
    width 100%
    display flex
    justify-content center
    opacity 0
    display none

    &.show
        opacity 1
        display flex


    &__item
        width 100%
        max-width 343px
        position relative

        &:before
            content ''
            width 100%
            height 107px
            position absolute
            bottom 0
            left 0
            background-color $black

    &__info
        padding 38px 0 18px
        width 100%
        position absolute
        left 0
        bottom 107px
        line-height 20px
        font-size 15px
        color $white
        text-align center
        letter-spacing -0.24px
        overflow hidden
        background-color rgba($gray, 0.75)
        backdrop-filter blur(12px)
        border-radius 16px
        box-sizing border-box

        .btn
            width 168px
            height 44px
            line-height 21px
            font-size 18px

            &__wrap
                margin-top 30px
                justify-content center