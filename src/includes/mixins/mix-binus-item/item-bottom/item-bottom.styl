.item
    &__bottom
        padding 44px 16px 24px
        width 100%
        height 256px
        position absolute
        left 0
        bottom 0
        overflow hidden
        background-color rgba($black, .75)
        backdrop-filter blur(12px)
        border-radius 0 0 8px 8px
        box-sizing border-box

        &-animbox
            width 100%
            height 100%
            display flex
            flex-wrap wrap
            justify-content space-evenly
            align-content space-between

        &-block
            width calc(100% /3)
            color $white
            text-align center

            &--blue
                color $blue

            &--green
                color $green

            p
                letter-spacing -.408px

        &-title
            line-height 28px
            font-size 22px
            font-weight 700
            letter-spacing .35px