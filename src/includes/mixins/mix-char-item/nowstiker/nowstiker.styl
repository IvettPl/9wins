.nowstiker
    padding 8px 40px 8px 20px
    position absolute
    top -2px
    left 0
    line-height 20px
    font-size 15px
    color $white
    opacity 0
    letter-spacing -0.24px
    background-color rgba($black, 0.5)
    border-radius 16px 0 16px 0
    transition opacity 350ms 1200ms

    &:before
        content ''
        width 10px
        height 10px
        position absolute
        top 50%
        right 20px
        background-color $green
        border-radius 50%
        transform translateY(-50%)

&.animation
    .nowstiker
        opacity 1