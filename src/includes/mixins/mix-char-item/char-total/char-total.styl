.charitem
    &__bottom
        &-total
            margin-bottom 20px
            width 100%
            display flex
            justify-content space-evenly

        &-item
            width 50%
            display inline-flex
            flex-direction column
            align-items center
            color $blue

            &:last-child
                color $green

        &-title
            line-height 28px
            font-size 22px
            font-weight 700
            letter-spacing 0.35px

        &-label
            letter-spacing -0.408px
