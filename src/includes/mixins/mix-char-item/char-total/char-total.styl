.charitem
    &__bottom
        &-total
            margin-bottom 20px
            width 100%
            display flex
            justify-content space-evenly
            position relative

        &-item
            width 50%
            display inline-flex
            flex-direction column
            align-items center
            color $blue
            opacity 0
            transform translateX(-50%)
            transition opacity 400ms 2400ms, transform 400ms 2400ms

            &:last-child
                color $green
                transform translateX(50%)

        &-title
            line-height 28px
            font-size 22px
            font-weight 700
            letter-spacing 0.35px

        &-label
            letter-spacing -0.408px


.animation
    .charitem__bottom-item
        opacity 1
        transform translateX(0)
