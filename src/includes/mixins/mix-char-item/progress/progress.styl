.progres
    width calc(100% - 34px)
    height 8px
    position absolute
    top 188px
    left 17px
    z-index 1
    overflow hidden

    progress
        width 0
        height 0
        position absolute
        left -100%

    &__bg
        width 100%
        height 100%
        opacity 0
        background-color $dark
        border-radius 4px
        transition opacity 650ms 1700ms

    &__bar
        width 0
        height 100%
        position absolute
        top 0
        left 0
        border-radius 4px
        background linear-gradient(180deg, $grad-yellow-first 0%, $grad-yellow-last 76.56%)
        transition width 650ms 2300ms


.animation
    .progres
        &__bg
            opacity 1

        &__bar
            width 100%