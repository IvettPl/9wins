mixin catSlider(items)
    each item in items
        div(class= item.className)
            include ./../../modules/favorite/favorite
            picture
                source(srcset= item.webp, type="image/webp")
                img(src= item.src, srcset= item.src2x, alt= item.srcAlt)
            if(item.hidden)
                .hidden-box
                    each hiddenContent in item.hidden
                        +button(hiddenContent)