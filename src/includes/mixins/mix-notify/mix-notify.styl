.notify
    margin-bottom 2px
    width 100%
    height 0
    display flex
    align-items center
    color $gray
    letter-spacing -0.41px
    opacity 0
    visibility hidden
    overflow hidden
    background-color $orange-superlight
    border-radius 18px
    box-sizing border-box
    transition opacity 250ms, height 250ms

    &.show
        min-height 58px
        opacity 1
        visibility visible

    &__icn
        margin 0 12px 0 15px
        width 20px
        height 20px
        flex-shrink 0

    &__text
        padding 10px 0