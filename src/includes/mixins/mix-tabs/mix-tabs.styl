.tabs
    margin 0 auto
    width 100%

    &__header
        width 100%
        display flex
        align-items center
        position relative
        background-color $dark
        border-radius 22px

        &:before
            content ''
            width calc((100% -2px) / 3)
            height calc(100% - 2px)
            position absolute
            top 1px
            left 1px
            background-color $gray
            border-radius 20px
            transition transform 300ms


        &-item
            margin 1px
            padding 12px 0
            width calc((100% -1px) / 3)
            line-height 18px
            font-size 13px
            color $white
            text-align center
            letter-spacing -0.078px
            position relative
            cursor pointer
            transition background 250ms, color 250ms

            &.active
                color $green
                // background-color $gray

            &:hover
                color $green

    &__content
        padding-top 32px
        width 100%
        overflow hidden
