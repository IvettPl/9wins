.historylist
    width 100%

    &__item
        margin-top 4px
        padding 20px 16px
        width 100%
        height 80px
        display flex
        position relative
        background-color $gray
        border-radius 16px
        box-sizing border-box

        &:first-child
            margin-top 0

        &-paylogo
            margin-right 16px
            width 75px
            flex-shrink 0
            display flex
            justify-content center
            align-items center
            background-color $gray-superlight
            border-radius 8px

        &-status
            margin-left 16px
            width 84px
            flex-shrink 0
            text-align right

        &-state
            color $yellow
            letter-spacing -0.41px
            white-space nowrap

            &.green
                color $green

            &.red
                color $red

        &-statedata
        &-data
            margin-top 2px
            line-height 16px
            font-size 12px
            color $gray-light

        &-payment
            width 100%

        &-price
            color $white
            letter-spacing -0.41px